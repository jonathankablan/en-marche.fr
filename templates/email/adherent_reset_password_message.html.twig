{% block subject %}
    Réinitialisation de votre mot de passe
{% endblock %}

{% block body_html %}

    {% embed 'email/layout.html.twig' %}
        {% block content %}
            <tr>
                <td align="left">
                    <p>
                        Bonjour @@first_name@@,
                    </p>
                    <p>
                        Pour réinitialiser votre mot de passe, cliquez ci-dessous !
                    </p>
                </td>
            </tr>
            <tr>
                <td align="center">
                    <a href="@@reset_link@@" target="_blank" class="btn">Réinitialiser mon mot de passe</a>
                </td>
            </tr>
            <tr>
                <td align="left">
                    <p>
                        À très bientôt,
                    </p>
                    <p>
                        L'équipe de La République En Marche !
                    </p>
                </td>
            </tr>
        {% endblock %}
    {% endembed %}

{% endblock %}
